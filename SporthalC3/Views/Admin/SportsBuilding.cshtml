@model IEnumerable<SportsBuilding>

@{
    ViewData["Title"] = "Beheer";
    Layout = "_AdminLayout";
}

<table class="table table-striped table-bordered table-condensed">
    <tr>
        <th class="text-right">ID</th>
        <th>Name</th>
        <th>City</th>
        <th>Street</th>
        <th>PostalCode</th>
        <th>HouseNumber</th>
        <th>Canteen</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td class="text-right">@item.SportsBuildingID</td>
            <td>@item.Name</td>
            <td>@item.City</td>
            <td>@item.Street</td>
            <td>@item.PostalCode</td>
            <td>@item.HouseNumber</td>
            <td>@item.Canteen</td>
            <td class="text-center">
                <form asp-action="DeleteSportsBuilding" method="post">
                    <a asp-action="EditSportBuildingView" class="btn btn-sm btn-warning"
                       asp-route-sportBuildingID="@item.SportsBuildingID">
                        Edit
                    </a>
                    <input type="hidden" name="SportsBuildingID" value="@item.SportsBuildingID" />
                    <button type="submit" class="btn btn-danger btn-sm">
                        Delete
                    </button>
                </form>
            </td>
        </tr>

    }
</table>
<div class="text-center">
    <a asp-action="CreateSportsBuilding" class="btn btn-primary">Toevoegen</a>
</div>