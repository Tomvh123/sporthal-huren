@model IEnumerable<SportsBuildingAdministrator>

@{
    ViewData["Title"] = "Beheer";
    Layout = "_AdminLayout";
}

<table class="table table-striped table-bordered table-condensed">
    <tr>
        <th class="text-right">ID</th>
        <th>FirstName</th>
        <th>LastName</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td class="text-right">@item.SportsBuildingAdministratorID</td>
            <td>@item.FirstName</td>
            <td>@item.LastName</td>
            <td class="text-center">
                <form asp-action="DeleteSportsBuildingAdministrator" method="post">
                    <a asp-action="EditSportBuildingAdministratorView" class="btn btn-sm btn-warning"
                       asp-route-sportBuildingAdministratorID="@item.SportsBuildingAdministratorID">
                        Edit
                    </a>
                    <input type="hidden" name="SportsBuildingAdministratorID" value="@item.SportsBuildingAdministratorID" />
                    <button type="submit" class="btn btn-danger btn-sm">
                        Delete
                    </button>
                </form>
            </td>
        </tr>

    }
</table>
<div class="text-center">
    <a asp-action="CreateSportsBuildingAdministrator" class="btn btn-primary">Toevoegen</a>
</div>
