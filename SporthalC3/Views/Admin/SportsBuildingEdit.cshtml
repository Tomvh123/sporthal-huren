@model SportsBuilding

@{
    ViewData["Title"] = "Beheer";
    Layout = "_AdminLayout";
}

<form asp-action="EditSportsBuilding" method="post">
    <input type="hidden" asp-for="SportsBuildingID" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <div><span asp-validation-for="Name" class="text-danger"></span></div>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="City"></label>
        <div><span asp-validation-for="City" class="text-danger"></span></div>
        <input asp-for="City" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Street"></label>
        <div><span asp-validation-for="Street" class="text-danger"></span></div>
        <input asp-for="Street" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="PostalCode"></label>
        <div><span asp-validation-for="PostalCode" class="text-danger"></span></div>
        <input asp-for="PostalCode" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="HouseNumber"></label>
        <div><span asp-validation-for="HouseNumber" class="text-danger"></span></div>
        <input asp-for="HouseNumber" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Canteen"></label>
        <div><span asp-validation-for="Canteen" class="text-danger"></span></div>
        <input asp-for="Canteen" class="form-control" />
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Save</button>
        <a asp-action="Index" class="btn btn-default">Cancel</a>
    </div>
</form>